<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@color/White">


    <Button
        android:id="@+id/ds"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:ellipsize="marquee"
        android:onClick="DeliveredShipments"
        android:singleLine="true"
        android:text="Delivered Shipments"
        android:textColor="#000000"
        android:textSize="12sp" />


    <Button
        android:id="@+id/as"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:ellipsize="marquee"
        android:onClick="AttemptedShipments"
        android:singleLine="true"
        android:text="Attempted Shipments "
        android:textColor="#000000"
        android:textSize="12sp" />


    <Button
        android:id="@+id/nas"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:ellipsize="marquee"
        android:onClick="NotAttemptedShipments"
        android:singleLine="true"
        android:text="Not Attempted Shipments "
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/statusheader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:ellipsize="marquee"
        android:onClick="AttemptedShipments"
        android:singleLine="true"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dsitems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#f2f2f2"
        android:visibility="gone" />


</TableLayout>

