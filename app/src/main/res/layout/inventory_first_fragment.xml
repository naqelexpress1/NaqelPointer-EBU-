<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <TableLayout
        android:id="@+id/lblTable"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@drawable/border">


        <LinearLayout
            android:layout_width="422dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/lWaybillNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="WaybillNo"
                android:textColor="#343538"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lPiecescount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="Pcs"
                android:textColor="#343538"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="Scan"
                android:textColor="#343538"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lDest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="Dest"
                android:textColor="#343538"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lReason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="Reason"
                android:textColor="#343538"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lSince"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="Since"
                android:textColor="#343538"
                android:textSize="14sp" />
        </LinearLayout>


    </TableLayout>

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/myBookingListView"
        android:layout_width="0dp"
        android:layout_height="643dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="8dp"
        android:dividerHeight="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTable" />

    <TextView
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Data"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>