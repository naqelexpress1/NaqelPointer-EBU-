<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/mdtp_transparent_black"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tripcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_gravity="center"
        android:text="RUHJEDCBU101"
        android:textColor="@color/NaqelBlue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vendorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:text="RUHJEDCBU101"
        android:textColor="@color/mdtp_transparent_black"
        android:textSize="10sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/originid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripcode"
        android:layout_gravity="center"
        android:text="RUH"
        android:textColor="@color/mdtp_light_gray"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripcode"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/originid"
        android:text=" - "
        android:textColor="@color/NaqelBlue"
        android:textSize="16sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripcode"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/dash"
        android:text="JED"
        android:textColor="@color/mdtp_light_gray"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/dtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripcode"
        android:layout_gravity="center"
        android:layout_toLeftOf="@id/eta"
        android:text="Deprt Time : "
        android:textColor="@color/NaqelBlue"
        android:textSize="16sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/eta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripcode"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:text="06:00:00"
        android:textColor="@color/NaqelRed"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:layout_below="@id/eta"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/mdtp_transparent_black" />


</RelativeLayout>

