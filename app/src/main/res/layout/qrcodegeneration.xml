<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/validatepayment"
        android:layout_width="242dp"
        android:layout_height="70dp"
        android:text="Validate Payment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="1">

        <TextView

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"

            android:gravity="center"
            android:padding="1dp"
            android:text="WaybillNo "
            android:textColor="@color/mdtp_transparent_black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/waybillno"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"

            android:gravity="center"
            android:padding="1dp"
            android:text="123456789"
            android:textColor="@color/NaqelBlue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1">

        <TextView

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="1dp"
            android:text="COD Amount "
            android:textColor="@color/mdtp_transparent_black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/codamount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="1dp"
            android:text="123456789"
            android:textColor="@color/NaqelBlue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

</TableLayout>