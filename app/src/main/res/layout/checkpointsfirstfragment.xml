<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/White"
        tools:ignore="MissingConstraints,ObsoleteLayoutParam"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/txtCheckPointType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Check Point Type"
            android:inputType="none"
            android:maxLength="40"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripID_Linear"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />

        <EditText
            android:id="@+id/txtCheckPointTypeDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Reason"
            android:inputType="none"
            android:maxLength="40"
            android:text=""
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCheckPointType"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />




        <EditText
            android:id="@+id/txtCheckPointTypeDDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Reason"
            android:inputType="none"
            android:maxLength="40"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCheckPointTypeDetail"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />


        <LinearLayout
            android:id="@+id/tripID_Linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <EditText
            android:id="@+id/txtCheckPointType_TripID"
            android:layout_width="750dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Trip ID"
            android:maxLength="40"
            android:text=""

            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded"
            tools:layout_editor_absoluteY="41dp" />


        <Button
            android:id="@+id/btnOpenCamera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/txtCheckPointType_TripID"
            android:layout_alignBottom="@id/txtCheckPointType_TripID"
            android:layout_alignRight="@id/txtCheckPointType_TripID"
            android:layout_marginRight="20dp"
            android:background="@drawable/camera"
            android:onClick="DeliveryScanClick"
            tools:ignore="HardcodedText" />

        </LinearLayout>

        <EditText
            android:id="@+id/txtNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint=""
            android:inputType="text"
            android:maxLength="40"
            android:text=""
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCheckPointTypeDDetail"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />

        <EditText
            android:id="@+id/txtweight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Weight"
            android:inputType="numberDecimal"
            android:maxLength="40"
            android:text=""
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCheckPointType"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />

        <EditText
            android:id="@+id/txtwidth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Width"
            android:inputType="numberDecimal"
            android:maxLength="40"
            android:text=""
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtweight"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />

        <EditText
            android:id="@+id/txtheight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Height"
            android:inputType="numberDecimal"
            android:maxLength="40"
            android:text=""
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtwidth"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />

        <EditText
            android:id="@+id/txtlength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Length"
            android:inputType="numberDecimal"
            android:maxLength="40"
            android:text=""
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtheight"
            tools:ignore="HardcodedText,LabelFor,ObsoleteLayoutParam,RtlHardcoded" />



    </android.support.constraint.ConstraintLayout>

</LinearLayout>