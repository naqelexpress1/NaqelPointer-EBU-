<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="50dp"
    android:background="@color/White">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sno"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/NaqelRed"
            android:textSize="15sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            tools:ignore="MissingConstraints">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:ignore="UselessParent">


                <TextView
                    android:id="@+id/byPickup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Saudi Post "
                    android:textColor="#292739"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/puidawbno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Pu ID / AWB : "
                    android:textColor="#B7B7D0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/pickup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@drawable/pickupcar"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/islocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@drawable/marker"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/locationll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        tools:ignore="UselessParent">


                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:maxLines="1"
                            android:text="Location"
                            android:textColor="#98ABBD"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/NaqelBlue"
                            android:textSize="15sp"
                            android:textStyle="bold"

                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                    <!-- no need below one -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1"
                        tools:ignore="UselessParent">


                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="#98ABBD"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".79"
                            android:drawableEnd="@drawable/marker"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="AnNahdah bkjbfks flknfw fkwlf"
                            android:textColor="#98ABBD"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/attempedstatus1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_weight=".4"
                            android:gravity="end"
                            android:text="Not Attempted"
                            android:textColor="#FC5A1A"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/clientll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1"
                        tools:ignore="UselessParent">


                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:maxLines="1"
                            android:text="Client Name"
                            android:textColor="#98ABBD"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/clientname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"

                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/NaqelBlue"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contactll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1"
                        tools:ignore="UselessParent">


                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:maxLines="1"
                            android:text="Ct.Name"
                            android:textColor="#98ABBD"
                            android:textSize="13sp"
                            android:textStyle="bold"

                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/contactname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/NaqelBlue"
                            android:textDirection="ltr"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        tools:ignore="UselessParent">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:maxLines="1"
                            android:text="Ct.No "
                            android:textColor="#98ABBD"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/mno1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".55"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="#151515"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageButton
                            android:id="@+id/ibmno1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight=".1"
                            android:background="@null"
                            android:gravity="end"
                            android:scaleType="fitCenter"
                            android:src="@drawable/call"
                            tools:ignore="ContentDescription" />

                        <ImageButton
                            android:id="@+id/ibwats1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight=".1"
                            android:background="@null"
                            android:gravity="end"
                            android:scaleType="fitCenter"
                            android:src="@drawable/whatsapp"
                            android:visibility="visible"
                            tools:ignore="ContentDescription" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/mno2ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1"
                        tools:ignore="UselessParent">


                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:maxLines="1"
                            android:text="MNo "
                            android:textColor="#98ABBD"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/mno2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".55"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="#151515"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <ImageButton
                            android:id="@+id/ibmno2"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight=".1"
                            android:background="@null"
                            android:gravity="end"
                            android:scaleType="fitCenter"
                            android:src="@drawable/call"
                            tools:ignore="ContentDescription" />

                        <ImageButton
                            android:id="@+id/ibwats2"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight=".1"
                            android:background="@null"
                            android:gravity="end"
                            android:scaleType="fitCenter"
                            android:src="@drawable/whatsapp"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/attempedstatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight=".5"
                            android:gravity="start"
                            android:text="Not Attempt"
                            android:textColor="#FC5A1A"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/totalforpickup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight=".5"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/NaqelBlue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pickedup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight=".5"
                            android:gravity="start"
                            android:text=""
                            android:textColor="#FC5A1A"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/exception"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight=".5"
                            android:gravity="start"
                            android:text=""
                            android:textColor="#FC5A1A"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </TableLayout>
                </LinearLayout>

            </LinearLayout>
